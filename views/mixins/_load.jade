mixin inlineCss(file)
	// <Deject>
	script.
		loadCSS( "#{file}", false, "all" );
	// </Deject>

mixin loadCss(file)
	script.
		loadCSS( "#{file}", false, "all" );
	noscript
		link(rel="stylesheet", href="#{file}")

mixin loadFont(file)
	script.
		//- loadCSS( "#{file}?ver=1.0.0", false, "all" ); // Loading fonts, if the site is located in a subfolder
		loadLocalStorageCSS( "webfonts", "#{file}" ); // Loading fonts, if the site is at the root
	noscript
		link(rel="stylesheet", href="#{file}")


